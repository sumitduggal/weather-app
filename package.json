{
  "name": "weather-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "run-p watch:tailwind start:app",
    "start:app": "react-scripts start",
    "watch:tailwind": "postcss -w src/assets/tailwind.css -o src/tailwind.generated.css",
    "prebuild": "npm run build:tailwind",
    "build": "react-scripts build",
    "build:tailwind": "postcss src/assets/tailwind.css -o src/tailwind.generated.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "weather-icons": "https://github.com/erikflowers/weather-icons.git"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.0.0",
    "postcss-preset-env": "^6.7.0",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.8.10",
    "typescript": "~3.7.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
